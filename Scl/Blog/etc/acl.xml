<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Scl_Blog::blog_content" title="Blog" sortOrder="20" >
                        <resource id="Scl_Blog::post" title="Blog Posts" sortOrder="50">
                            <resource id="Scl_Blog::save" title="Save Blog Post" sortOrder="20" />
                            <resource id="Scl_Blog::post_delete" title="Delete Blog Post" sortOrder="20" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>